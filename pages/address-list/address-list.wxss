/* W2W Extension, Name: w2w-advanced-address, Code: addressListStyles */

/* 地址 */

.list {
    padding-bottom: 100px;
}

.list .address {
    margin: 0 15px;
    padding: 15px;
    position: relative;
}

.list .address:active {
    background-color: #ddd;
}

.list .address::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.address .customer-info, .address .address-detail {
    line-height: 1;
}

.address .customer-info text, .address .address-detail text {
    margin-right: 5px;
}

.address .address-detail {
    color: #999;
    font-size: 12px;
}

/* 操作弹窗 */

.action-popup .zan-popup__container {
    width: 70%;
    border-radius: 2px;
    overflow: hidden;
}

.action-popup .actions .action {
    padding: 15px;
    position: relative;
}

.action-popup .actions .action:active {
    background-color: #ddd;
}

.action-popup .actions .action:not(:last-child)::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.add-btn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    font-size: 12px;
    border-radius: 0;
    border: 0;
    z-index: 9;
}

.add-btn.import-wechat {
    bottom: 50px;
}

.add-btn image {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.add-btn text {
    line-height: 1;
}

