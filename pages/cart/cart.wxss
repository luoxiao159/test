page {
    background-color: #f5f5f5;
}

.container {
    padding-bottom: 49px;
    overflow: hidden;
}

.empty-cart {
    font-size: 16px;
}

.empty-cart text {
    margin-top: -40px;
}

.go-shopping {
    font-size: 14px;
    color: #555;
    margin-top: 10px;
    border-radius: 3px;
}

.cart-list {
    background-color: #fff;
    margin-top: 0;
}

.cart-item {
    display: flex;
    position: relative;
    padding: 10px;
}

.cart-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.cart-item .delete-cart {
    position: absolute;
    top: 12px;
    right: 13px;
    border: 1px solid #707070;
    border-radius: 50%;
    z-index: 3;
}

.cart-item .delete-cart image {
    padding: 2px;
    width: 15px;
    height: 15px;
}

.cart-item .product-image {
    width: 200rpx;
    height: 200rpx;
    position: relative;
    z-index: 2;
}

.cart-item .cart-detail {
    width: 350rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
    position: relative;
    padding: 0 20rpx;
    padding-right: 25px;
    z-index: 2;
}

.cart-item .cart-detail .product-title, .cart-item .cart-detail .choose-wrapper {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cart-item .cart-detail .choose-wrapper text {
    font-size: 11px;
    color: #999;
}

.cart-item .cart-detail .product-title {
    font-size: 12px;
    word-break: break-all;
}

.cart-item .cart-detail .choose-wrapper .choose-tip {
    display: none;
}

.cart .cart-detail .zan-stepper {
    margin-top: 3px;
}

.cart .cart-detail .zan-stepper view {
    line-height: 15px;
    min-width: 20px;
}

.cart .cart-detail .zan-stepper .zan-stepper__text {
    height: 25px;
    line-height: 25px;
}

.cart-item .cart-item-price {
    display: flex;
    padding-right: 10rpx;
    position: absolute;
    bottom: 0;
    right: 0;
}

.cart-item-price .line-subtotal {
    color: var(--mainColor);
    margin-left: 7px;
}

/* 底栏 */

.checkout {
    display: flex;
    width: 100%;
    height: 50px;
    background-color: #fff;
    font-size: 12px;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
}

.checkout .total {
    display: flex;
    align-items: center;
    flex-grow: 1;
    padding-left: 10px;
    position: relative;
}

.checkout .total::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.checkout .total .without-shipping {
    font-size: 12px;
    color: #707070;
}

.checkout .total .cart-total, .checkout .total .shipping-total,
.checkout .total .discount-total {
    display: flex;
    align-items: center;
}

.checkout .total .cart-total, .checkout .total .discount-total {
    margin-right: 10px;
}

.checkout .total .cart-total .price, .checkout .total .shipping-total .price,
.checkout .total .discount-total .price {
    font-size: 18px;
}

.checkout .total .cart-total .price {
    color: var(--mainColor);
}

.checkout .checkout-btn {
    display: flex;
    align-items: center;
    height: auto;
    padding: 0 20px;
    border-radius: 0;
}

/* 登录框 */

.need-login.center {
    background: rgba(0, 0, 0, 0.7);
}

.login-popup {
    width: 100%;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%, -50%, 0);
    transform-origin: center;
    transition: all 0.4s ease;
    z-index: 11;
}

.center .login-popup {
    margin: 0;
}

/* 交叉销售 */

.cross-sells {
    margin: 10px 0;
}

.cross-sells-label {
    color: var(--mainColor);
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
}

.cross-sells-label image {
    width: 18px;
    height: 18px;
    margin-right: 5px;
}
