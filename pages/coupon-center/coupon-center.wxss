/* W2W Extension, Name: w2w-advanced-coupon, Code: couponCenterStyles */

/* 优惠券列表 */

.coupon-list {
    padding: 10px 20px;
}

.coupon-list.show {
    display: block;
}

.coupon-list .coupon {
    width: 100%;
    position: relative;
    margin-bottom: 17px;
}

.coupon-list .coupon .coupon-main {
    position: relative;
}

.coupon .remove-coupon {
    position: absolute;
    top: 15px;
    right: 7px;
    z-index: 1;
}

.coupon .remove-coupon image {
    width: 17px;
    height: 17px;
}

.coupon .coupon-content {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.coupon-content .coupon-value {
    width: 72%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.coupon-content .coupon-value .product-price {
    color: #fff;
    font-size: 32px;
    margin-top: 8px;
}

.coupon-content .coupon-value .currency {
    font-size: 18px;
}

.coupon.percent .coupon-content .coupon-value .currency {
    font-size: 14px;
}

.coupon-content .coupon-receive {
    width: 28%;
    font-size: 14px;
    color: #fff;
    flex-shrink: 0;
    writing-mode: tb;
    letter-spacing: 0.2em;
    display: flex;
    justify-content: center;
    align-items: center;
}

.coupon-content .coupon-detail {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.coupon-detail .coupon-description {
    font-size: 14px;
    color: #fff;
    padding: 0 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.coupon-detail .coupon-expiry-date {
    font-size: 11px;
    color: #fff;
    display: none;
}

.coupon .instruction {
    color: #c0c0c0;
    font-size: 12px;
    display: flex;
    justify-content: space-between;
    padding: 5px 10px;
    width: 100%;
    border-top: 0;
    position: relative;
}

.coupon .instruction text {
    line-height: 1.4;
}

.coupon .instruction .expand-btn {
    margin-top: -1px;
    padding: 2px;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
}

.coupon .instruction .expand-btn image {
    padding: 2px;
    width: 10px;
    height: 10px;
    transform: rotate(270deg);
    background-color: #c0c0c0;
    border-radius: 50%;
}

.coupon .instruction:not(.expand) text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.coupon .instruction.expand .expand-btn image {
    transform: rotate(90deg);
}

.coupon .instruction::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border: 1px solid #ddd;
    border-top: 0;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.coupon.invalid .coupon-content .coupon-value .product-price,
.coupon.invalid .coupon-content .coupon-receive,
.coupon.invalid .coupon-detail .coupon-description,
.coupon.invalid .coupon-detail .coupon-expiry-date {
    color: #666;
}

.no-coupon {
    text-align: center;
}

/* W2W Extension, Name: w2w-advanced-coupon, Code: couponCenterStyles */
