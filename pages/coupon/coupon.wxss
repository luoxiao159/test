.container {
    padding: 10px;
}

.coupon-input-wrapper {
    display: flex;
}

.coupon-input-wrapper input {
    color: #555;
    flex-grow: 1;
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    margin-right: 5px;
    border: 1px solid #ddd;
    border-radius: 2px;
}

.coupon-input-wrapper button {
    display: flex;
    align-items: center;
    height: auto;
    border: 0;
    border-radius: 2px;
}

/* 优惠券列表 */

.coupon-list {
    padding: 15px 0;
}

.coupon-list .coupon {
    position: relative;
    padding: 5px 0;
}

.coupon .remove-coupon {
    position: absolute;
    top: 15px;
    right: 7px;
    z-index: 1;
}

.coupon .remove-coupon image {
    width: 17px;
    height: 17px;
}

.coupon .coupon-content {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.coupon-content .coupon-value {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30%;
    color: #fff;
    font-size: 32px;
    padding-right: 5px;
    flex-shrink: 0;
}

.coupon-content .coupon-value .currency {
    font-size: 18px;
}

.coupon-content .coupon-detail {
    flex-grow: 1;
    padding: 0 25px 0 16px;
    margin: 20px 0;
}

.coupon-detail .coupon-description {
    font-size: 13px;
}

.coupon-detail .coupon-expiry-date {
    font-size: 12px;
    color: #707070;
}

.no-used-coupon {
    text-align: center;
}
