page {
    height: 100%;
}

.container {
    padding: 0 30px;
}

.container, .main, .header {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.main, .middle {
    width: 100%;
}

.header {
    width: 100%;
    padding: 40px 0;
}

.avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-top: 15px;
    overflow: hidden;
}

.logo {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 5px;
}

.name {
    font-size: 16px;
    padding: 10px 0;
}

.middle {
    margin: 30px 0;
}

.text-main, text-sub {
    padding: 7px 0;
}

.text-main {
    font-size: 16px;
    display: flex;
    align-items: center;
}

.text-sub {
    font-size: 14px;
    color: #888;
}

.login-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    color: #fff;
    background-color: #08c163;
    border: 0;
    width: 100%;
    height: 50px;
    border-radius: 25px;
    margin-top: 20px;
}

.login-btn image {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}
