/* W2W Extension, Name: w2w-advanced-coupon, Code: myCouponStyles */

page {
    min-height: 100%;
}

.container {
    width: 100%;
}

/* 选项卡 */

.coupon-status-bar {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
}

.zan-tab__bd--scroll {
    height: 48px !important;
}

.zan-tab__bd--scroll .zan-tab__item {
    width: 33.333333%;
}

.tab-content-wrapper {
    background-color: #f5f5f5;
    padding: 0;
    margin-top: 49px;
}

/* 输入框 */

.coupon-input-wrapper {
    margin-top: 59px;
    padding: 0 20px;
    display: flex;
}

.container.select .coupon-input-wrapper {
    margin-top: 10px;
}

.coupon-input-wrapper input {
    color: #555;
    flex-grow: 1;
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    margin-right: 5px;
    border: 1px solid #ddd;
    border-radius: 2px;
    background-color: #fff;
}

.coupon-input-wrapper button {
    line-height: 1;
    white-space: nowrap;
    display: flex;
    align-items: center;
    height: auto;
    border: 0;
    border-radius: 2px;
}

/* 优惠券列表 */

.invalid-coupons-text {
    color: #666;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    margin: 10px 0;
}

.coupon-list {
    display: none;
    padding: 10px 20px;
}

.coupon-list.show {
    display: block;
}

.coupon-list .coupon {
    width: 100%;
    position: relative;
    margin-bottom: 17px;
}

.coupon-list .coupon .coupon-main {
    position: relative;
}

.coupon .remove-coupon {
    position: absolute;
    top: 15px;
    right: 7px;
    z-index: 1;
}

.coupon .remove-coupon image {
    width: 17px;
    height: 17px;
}

.coupon .coupon-content {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.coupon-content .coupon-value {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34%;
    padding-right: 5px;
    flex-shrink: 0;
}

.coupon-content .coupon-value .product-price {
    color: #fff;
    font-size: 32px;
}

.coupon-content .coupon-value .currency {
    font-size: 18px;
}

.coupon.percent .coupon-content .coupon-value .currency {
    font-size: 14px;
}

.coupon-content .coupon-detail {
    flex-grow: 1;
    margin: 10px;
    position: relative;
}

.coupon-detail .coupon-description {
    font-size: 14px;
    color: #fff;
}

.coupon-detail .coupon-expiry-date {
    font-size: 11px;
    color: #fff;
}

.coupon-detail .applied, .coupon-detail .goto-use {
    position: absolute;
    bottom: 0;
    right: 0;
}

.coupon-detail .applied image {
    width: 20px;
    height: 20px;
}

.coupon-detail .goto-use {
    color: #fff;
    font-size: 13px;
}

.coupon .instruction {
    color: #c0c0c0;
    font-size: 12px;
    display: flex;
    justify-content: space-between;
    padding: 5px 10px;
    width: 100%;
    border-top: 0;
    position: relative;
}

.coupon .instruction text {
    line-height: 1.4;
}

.coupon .instruction .expand-btn {
    padding: 2px;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
}

.coupon .instruction .expand-btn image {
    padding: 2px;
    width: 10px;
    height: 10px;
    transform: rotate(270deg);
    background-color: #c0c0c0;
    border-radius: 50%;
}

.coupon .instruction:not(.expand) text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.coupon .instruction.expand .expand-btn image {
    transform: rotate(90deg);
}

.coupon .instruction::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border: 1px solid #ddd;
    border-top: 0;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.coupon-list:not(.notused) .coupon-content .coupon-value .product-price,
.coupon-list:not(.notused) .coupon-detail .coupon-description,
.coupon-list:not(.notused) .coupon-detail .coupon-expiry-date,
.coupon.invalid .coupon-content .coupon-value .product-price,
.coupon.invalid .coupon-detail .coupon-description,
.coupon.invalid .coupon-detail .coupon-expiry-date {
    color: #666;
}

.no-used-coupon {
    text-align: center;
}

