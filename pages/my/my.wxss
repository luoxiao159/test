page {
    background-color: #f5f5f5;
}

.block {
    padding: 7px 15px;
    margin: 7px 0;
    background: #fff;
}

.block-btn.menu {
    margin-top: 0;
}

.block.main {
    margin-top: 0;
}

.block.user-info {
    padding: 0;
    margin: 0;
    position: relative;
    overflow: hidden;
    height: 200px;
    display: flex;
    align-items: center;
}

.block.user-info > .login-btn, .block.user-info > .login-inner {
    width: 100%;
    padding: 7px 15px;
}

.block.user-info > .login-btn {
    background-color: transparent;
    justify-content: center;
    border: 0;
}

.user-info .username {
    color: #fff;
}

.user-info .login-btn .username {
    color: #fff;
}

.user-info .avatar {
    width: 60px;
    height: 60px;
    margin-right: 15px;
}

.user-info .avatar-blur {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
}

.user-info .avatar-blur image {
    filter: blur(10px);
    width: 100%;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.user-info .avatar-blur-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.1);
}

.user-info .login-inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 70px;
}

.user-info .login-inner .avatar {
    margin-right: 0;
    margin-bottom: 5px;
}

.blur-android {
    position: absolute;
    width: 100%;
    transform: scale(1.1);
}

.blur-ios {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    -webkit-backdrop-filter: blur(35px) saturate(200%);
}

.block-btn {
    padding: 0;
}

.block-btn button {
    color: #555;
    background: #fff;
    border: 0;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
    padding: 0 10px;
    position: relative;
}

.block-btn .left-area, .block-btn .right-area {
    display: flex;
    align-items: center;
}

.block-btn button image {
    width: 20px;
    height: 20px;
    margin-right: 10px;
}

.block-btn button image.go {
    width: 15px;
    height: 15px;
    margin-right: 0;
    position: absolute;
    top: 50%;
    right: 5px;
    transform: translateY(-50%);
}

.block-btn button {
    position: relative;
    height: 47px;
    padding: 7px 2px;
    margin: 0 12px;
}

.block-btn button:not(:last-child)::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.block-btn .value {
    float: right;
}

/* 订单状态 */

.order-statuses {
    margin: 0 12px;
    display: flex;
    align-items: center;
    position: relative;
}

.order-statuses::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.order-status {
    width: 33.33333%;
    padding: 5px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 2;
}

.order-status image {
    width: 35px;
    height: 35px;
}

.order-status-inner {
    font-size: 13px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.order-status text {
    font-size: 12px;
    color: #888;
}

.order-status .orders-count {
    text-align: center;
    display: block;
    font-size: 12px;
    min-width: 10px;
    height: 20px;
    line-height: 20px;
    color: #fff !important;
    background-color: var(--mainColor);
    border-radius: 10px;
    padding: 0 5px;
    white-space: nowrap;
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(50%, -50%);
}

/* 积分按钮 */

.points-value {
    color: var(--mainColor);
    margin-right: 3px;
}
