<import src="/templates/order-cart-list.wxml" />
<import src="/templates/nav-bar.wxml" />

<nav-bar custom-style="{{ {backgroundColor:'#fff'} }}">
    <view slot="content" class="nav-bar-wrapper-wrap">
        <template is="nav-bar" data="{{pageTitle, backBtn: true}}"></template>
    </view>
    <view slot="placeholder" style="height:{{NAV_HEIGHT}}"></view>
</nav-bar>

<view class="container order-review-list">
    <view class="cart-list">
        <block wx:for="{{order.line_items}}" wx:key="key">

            <view class="cart-item {{item.reviewed ? 'reviewed' : ''}}" data-item-id="{{item.id}}" bindtap="{{! item.reviewed ? 'goOrderReviewPost' : ''}}">
                <view class="product-image">
                    <lazy-image src="{{item.image[0].single.url}}" mode="widthFix" />
                </view>
                <view class="cart-detail-wrapper">
                    <view class="cart-detail">
                        <text class="product-title">{{item.name}}</text>
                        <!-- 已选属性 -->
                        <view wx:if="{{item.meta.length > 0}}" class="choose-wrapper">
                            <block wx:for="{{item.meta}}" wx:key="key">
                                <text>{{item.value}}</text>
                            </block>
                        </view>
                    </view>
                </view>
                <view class="review">
                    <block wx:if="{{item.reviewed}}">
                        <text>已评价</text>
                        <view class="placeholder"></view>
                    </block>
                    <block wx:else>
                        <text>去评价</text>
                        <image src="/images/go_light.svg"></image>
                    </block>
                </view>
            </view>

        </block>
    </view>
</view>