page {
    background-color: #f5f5f5;
}

nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}

nav-bar:not(.show) .ui-nav-bar {
    box-shadow: none;
}

nav-bar:not(.show) .nav-bar-item.title text {
    color: #fff;
}

nav-bar:not(.show) .nav-bar-item.back image {
    width: 28px;
    height: 28px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 50%;
    padding: 5px;
    box-sizing: border-box;
}

nav-bar:not(.show) .nav-status-bar {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.2);
}

nav-bar:not(.show) .nav-bar-item.back:active {
    background-color: transparent;
}

.empty-product image {
    margin-top: -40px;
    width: 50px;
    height: 50px;
}

.empty-product text {
    margin-top: 5px;
}

.empty-product button {
    font-size: 14px;
    color: #555;
    margin-top: 20px;
    border-radius: 3px;
}

.product-gallery swiper, .product-gallery swiper image {
    width: 100%;
}

.product-detail-wrapper {
    padding-bottom: 50px;
}

.info-block {
    padding: 10px;
    background-color: #fff;
}

.popup-block, .tab-block {
    margin: 10px 0;
}

.product-detail .product-title-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.product-detail .price-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2px;
}

.product-detail .price-wrap .share {
    flex-shrink: 0;
    margin-left: 4px;
}

.product-detail .price-wrap .share image {
    width: 20px;
    height: 20px;
    padding: 5px;
}

.product-detail .info-block .product-title,
.product-detail .popup-wrapper .product-title {
    font-size: 18px;
    color: inherit;
    display: flex;
    align-items: center;
}

/*.product-detail .info-block .product-title text,
.product-detail .popup-wrapper .product-title text {
    line-height: 1.3;
}*/

.product-detail .stock-and-total-sale {
    color: #777;
}

.product-detail .stock-and-total-sale .stock {
    margin-right: 10px;
}

.product-detail .info-block .product-onsale-to {
    color: #777;
}

.product-detail .info-block .product-price,
.product-detail .popup-wrapper .product-price {
    color: var(--mainColor);
    font-size: 26px;
    display: flex;
    align-items: flex-end;
}

.product-price .hyphen {
    align-self: center;
}

.product-detail .tab-block .tab-description {
    padding-top: 10px;
    padding-bottom: 10px;
}

.product-price .currency {
    font-size: 20px;
}

.popup-block .choose-variation {
    position: relative;
}

.popup-block .choose-variation::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #eee;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.choose-variation .choose-wrapper {
    margin-right: 5px;
    display: inline-block;
}

.choose-variation .choose-tip {
    color: #777;
}

/* 相关产品 */

.related-products {
    margin: 10px 0;
}

/* 底栏 */

.add-cart {
    width: 100%;
    height: 50px;
    line-height: 50px;
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
    z-index: 20;
    overflow: visible;
}

.add-cart button {
    width: 52px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 0;
    border-radius: 0;
    border: 0;
    overflow: visible;
}

.add-cart button:not(.add-cart-btn)::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.add-cart button text {
    font-size: 12px;
    color: #444;
}

.add-cart button image {
    width: 25px;
    height: 25px;
}

.add-cart .add-cart-btn text {
    font-size: 14px;
}

.add-cart .btn.secondary {
    background-color: #fff;
}

.add-cart .btn.secondary:not(.add-cart-btn)::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-left: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.add-cart .cart-btn {
    z-index: 2;
}

.add-cart .cart-btn .cart-quantity {
    font-size: 12px;
}

.add-cart .add-cart-btn {
    line-height: 50px;
    border-radius: 0;
    flex-grow: 1;
    background-color: rgba(61, 177, 176, 0.7);
}

.add-cart .add-cart-btn text {
    color: #fff;
    line-height: 1;
}

.add-cart .add-cart-btn.buynow-btn {
    background-color: var(--mainColor);
}

/* 变量选择 */

.variation-popup .attribute-group-wrapper {
    max-height: 300px;
    overflow-y: auto;
}

.variation-popup .product-info {
    position: relative;
    display: flex;
    overflow: visible;
}

.variation-popup .product-info .variation-image {
    width: 100px;
    height: 100px;
    padding: 5px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #fff;
    position: relative;
    top: -20px;
    flex-shrink: 0;
}

.variation-popup .close-btn {
    right: -5px;
}

.variation-popup .product-info .product-info-detail {
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-left: 15px;
    padding: 5px 0;
    overflow: hidden;
}

.variation-popup .product-info .product-price-wrapper {
    margin: 5px 0;
}

.product-info-detail .stock-quantity text,
.product-info-detail .choose-wrapper text {
    line-height: 1.6;
}

.variation-popup .product-description {
    margin-bottom: 5px;
}

.attribute-group {
    padding: 10px 0;
    position: relative;
}

.attribute-group::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.attribute-group .zan-stepper {
    margin-top: 10px;
    position: relative;
    z-index: 2;
}

.attribute-group .attributes-wrapper {
    display: flex;
    flex-wrap: wrap;
    overflow: visible;
}

.attribute-group .variation {
    display: flex;
    align-items: center;
    font-size: 12px;
    height: 30px;
    padding: 5px 10px;
    margin-top: 10px;
    margin-right: 7px;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
    position: relative;
    z-index: 2;
}

.attribute-group .variation.checked {
    color: var(--mainColor);
    border-color: var(--mainColor);
    background-color: rgba(61, 177, 176, 0.2);
}

.attribute-group .variation.disabled {
    color: #777;
    background-color: #eee;
}

.attribute-group .variation .variation-color {
    display: inline-block;
    width: 11px;
    height: 11px;
    margin-right: 6px;
    border-radius: 50%;
}

.attribute-group .variation .variation-image {
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-right: 8px;
    border-radius: 2px;
}

.attribute-group .variation text {
    line-height: 1;
}

/* 属性列表 */

.attributes-popup .popup-wrapper {
    position: relative;
}

.empty-attribute {
    padding: 10px 0;
    text-align: center;
}

.attributes {
    max-height: 350px;
    overflow-y: auto;
}

.attributes-popup .attribute-row {
    display: flex;
    padding: 10px 0;
    position: relative;
}

.attributes-popup .attribute-row::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.attributes-popup .attribute-name {
    flex-shrink: 0;
    width: 160rpx;
}

.attributes-popup .attribute-value {
    flex-grow: 1;
}

.attributes-popup .attribute-value .attribute-value-item {
    margin-right: 10px;
}

/* 购物车按钮 */

.side-btn {
    position: fixed;
    right: 15px;
    display: flex;
    width: 40px;
    height: 40px;
    padding: 7px;
    border: 1px solid #ddd;
    border-radius: 50%;
    overflow: visible;
    z-index: 25;
}

.side-btn image {
    width: 100%;
    height: auto;
}

.side-btn.cart-btn {
    bottom: 65px;
}

/* 限时促销 */

.product-onsale-to {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
}

.product-onsale-to text {
    color: var(--mainColor);
    padding: 0 2px;
    line-height: 1;
    display: flex;
    align-items: center;
}

.product-onsale-to .countdown {
    color: #fff;
    background-color: var(--mainColor);
    padding: 2px 5px;
    border-radius: 4px;
}

/* 产品评价 */

.empty-review, .empty-description, .view-all-reviews {
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px 0;
}

.empty-description {
    padding: 5px 0;
}

/* W2W Extension, Name: w2w-products-groupon, Code: productDetailStyle */

.groupon-member-amount {
    font-size: 11px;
    color: #fff;
    background-color: var(--mainColor);
    line-height: 1 !important;
    padding: 4px 8px;
    margin-right: 10px;
    white-space: nowrap;
    flex-shrink: 0;
}

.groupon .add-cart .add-cart-btn {
    background-color: rgba(61, 177, 176, 0.7);
}

.groupon .add-cart .add-cart-btn, .groupon .add-cart .add-cart-btn text,
.groupon .add-cart .start-groupon-btn {
    font-size: 12px;
}

.add-cart .start-groupon-btn {
    border-radius: 0;
    flex-grow: 1;
}

.add-cart .start-groupon-btn text {
    color: #fff;
    line-height: 1;
}

.groupon-price {
    line-height: 1;
    display: flex;
    align-items: flex-end;
    margin-bottom: 6px;
}

.groupon-price text {
    font-size: 16px !important;
}

.groupon-price .currency {
    line-height: 0.85;
    font-size: 12px !important;
}

.groupon-rule-label {
    color: #777;
    margin-right: 7px;
}

/* 可参团列表 */

.groupon-orders {
    font-size: 12px;
    height: auto;
    padding: 0 14px;
    display: flex;
    flex-direction: column;
}

.groupon-orders-title {
    padding: 12px 0;
}

.groupon-order {
    padding: 10px 0;
    display: flex;
    justify-content: space-between;
}

.groupon-leader, .groupon-info {
    display: flex;
    align-items: center;
}

.groupon-remain text {
    line-height: 1;
}

.groupon-leader-avatar {
    width: 25px;
    height: 25px;
    margin-right: 7px;
    border-radius: 50%;
}

.go-groupon {
    font-size: 11px;
    color: #fff;
    background-color: var(--mainColor);
    display: inline-block;
    padding: 3px 5px;
    border-radius: 3px;
    margin-left: 10px;
}

