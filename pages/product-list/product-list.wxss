/* 搜索框 */

.search-wrapper {
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 8px;
    padding-left: 8px;
    padding-right: 8px;
}

.container:not(.container-filter-orderby) .search-wrapper {
    padding-bottom: 8px;
}

.search-wrapper.show {
    padding-bottom: 8px;
    background-color: #fff;
    position: relative;
    z-index: 2;
}

.search {
    flex-grow: 1;
    position: relative;
}

.search-icon {
    width: 15px;
    height: 15px;
    position: absolute;
    top: 50%;
    left: 10px;
    transform: translateY(-50%);
}

.search-input {
    display: block;
    color: #707070;
    font-size: 12px;
    padding: 2px 30px;
    height: 30px;
    border-radius: 15px;
    background-color: #efefef;
    box-sizing: border-box;
}

.search-close {
    width: 15px;
    height: 15px;
    padding: 5px;
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
}

/* 搜索历史 */

.search-mask {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgba(0, 0, 0, 0.7);
}

.search-mask.show {
    display: block;
}

.search-history {
    display: none;
    width: 100%;
    background-color: #fff;
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 2;
}

.search-history.show {
    display: block;
}

.history-label {
    color: #555;
    font-size: 13px;
    padding: 10px 12px;
    padding-top: 25px;
    position: relative;
}

.history {
    height: 48px;
    padding: 0 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.history:active {
    background-color: rgba(0, 0, 0, 0.05);
}

.search-keyword {
    font-size: 14px;
    height: 100%;
    display: flex;
    align-items: center;
    flex-grow: 1;
    position: relative;
    z-index: 2;
}

.history .actions {
    flex-shrink: 0;
}

.history .actions image {
    width: 25px;
    height: 25px;
    position: relative;
    z-index: 2;
}

.delete-all {
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.delete-all image {
    width: 15px;
    height: 15px;
    margin-right: 10px;
}

.delete-all text {
    line-height: 1;
}

.history::before, .history-label::before, .delete-all::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.category {
    flex-shrink: 0;
    margin-left: 5px;
}

.category-icon {
    width: 25px;
    height: 25px;
}

.category-list {
    display: none;
    width: 100%;
    height: 320px;
    padding-bottom: 40px;
    background-color: #fff;
    border-top: 1px solid #efefef;
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 2;
}

.category-list.show {
    display: flex;
}

.category-list scroll-view {
    width: 100%;
    height: 100%;
}

.category-list-l1 {
    width: 130px;
    flex-shrink: 0;
    background-color: #f1f1f1;
}

.category-list-l1.full {
    width: 100%;
}

.category-list-l1 .category-item {
    background-color: #efefef;
}

.category-list-l2 {
    flex-grow: 1;
}

.category-item {
    height: 45px;
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px;
}

.category-item.active {
    color: var(--mainColor);
    background-color: #fff;
}

.category-item.active::after {
    display: block;
    content: '';
    width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-right: 8px solid var(--mainColor);
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
}

.category-image {
    width: 20px;
    height: 20px;
    margin-right: 8px;
}

.category-name {
    font-size: 12px;
    line-height: 1;
}

.category-actions {
    width: 100%;
    height: 40px;
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    border-top: 1px solid #efefef;
}

.category-action {
    font-size: 12px;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.category-confirm {
    color: #fff;
    background-color: var(--mainColor);
}

/* W2W Extension, Name: w2w-products-filter-and-orderby, Code: filterStyle */

/* 排序和筛选 */

.filter-popup .title {
    font-size: 16px;
    padding: 10px 0;
}

.container.container-filter-orderby {
    padding-top: 78px;
}

.filter-orderby-bar {
    width: 100%;
    height: 40px;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #efefef;
}

.orderby {
    flex-grow: 1;
}

.orderby-scroll {
    display: flex;
    align-items: center;
    overflow-x: auto;
}

.orderby-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    flex-shrink: 0;
    padding: 5px 10px;
    color: #aaa;
}

.orderby-item.active {
    color: #444;
}

.orderby-item .arrow {
    margin-left: 5px;
}

.orderby-item .arrow-up {
    margin-bottom: 2px;
}

.orderby-item .arrow-up.active {
    border-bottom-color: #000;
}

.orderby-item .arrow-down.active {
    border-top-color: #000;
}

.open-filter {
    flex-shrink: 0;
    padding: 5px 10px;
    display: flex;
    align-items: center;
}

.open-filter image {
    width: 18px;
    height: 18px;
    margin-right: 2px;
}

.filter-popup .zan-popup__container {
    width: 75%;
    height: 100%;
    position: fixed;
    top: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    z-index: 20;
}

.filter-popup .zan-popup__mask {
    z-index: 19;
}

.filter-group-wrapper {
    padding: 0 10px;
    flex-grow: 1;
    overflow-y: auto;
}

.filter-group-wrapper .filter-group {
    padding-top: 10px;
    position: relative;
}

.filter-group-wrapper .filter-group::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.filter-group .filter-group-title {
    margin-bottom: 10px;
    color: #666;
    font-size: 12px;
}

.filter-group .filter-attr-wrapper {
    display: flex;
    flex-wrap: wrap;
    position: relative;
    z-index: 2;
}

.filter-attr-wrapper .filter-attr-item {
    display: flex;
    align-items: center;
    height: 30px;
    padding: 5px 10px;
    border-radius: 4px;
    margin-right: 10px;
    margin-bottom: 10px;
    font-size: 12px;
    box-sizing: border-box;
    border: 1px solid #ddd;
}

.filter-attr-wrapper .filter-attr-item.active {
    color: var(--mainColor);
    border-color: var(--mainColor);
    background-color: rgba(61, 177, 176, 0.18);
}

.filter-attr-wrapper .filter-attr-item .filter-attr-color {
    display: inline-block;
    width: 11px;
    height: 11px;
    margin-right: 6px;
    border-radius: 50%;
}

.filter-attr-wrapper .filter-attr-item .filter-attr-image {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin-right: 6px;
}

.filter-attr-wrapper .filter-attr-item text {
    line-height: 1;
}

.filter-popup .actions {
    flex-shrink: 0;
    display: flex;
    justify-content: flex-end;
    padding: 10px 10px;
    position: relative;
}

.filter-popup .actions::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.filter-popup .actions button {
    color: #fff;
    height: 32px;
    line-height: 32px;
    display: inline-flex;
    align-items: center;
    background-color: var(--mainColor);
    font-size: 14px;
    margin: 0;
    padding: 0 25px;
    border-color: #fff;
    position: relative;
    z-index: 2;
}

.filter-popup .actions .reset {
    border-radius: 15px 0 0 15px;
    background: linear-gradient(to right, rgba(61, 177, 176, 0.6), rgba(61, 177, 176, 0.8));
    border-right: 0;
}

.filter-popup .actions .confirm {
    border-radius: 0 15px 15px 0;
    background: linear-gradient(to right, rgba(61, 177, 176, 0.8), var(--mainColor));
}

