<view class="lazy-image-wrapper {{show ? 'show' : ''}}" style="{{styles}}">
    <image src="{{load ? src : ''}}" class="lazy-image" mode="{{mode}}" webp="{{true}}" bindload="imageLoad"></image>
    <image wx:if="{{!show && loadingImage}}" class="lazy-image-loading" src="{{loadingImage}}"></image>
</view>