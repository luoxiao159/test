.loading {
    width: 70px;
    height: 70px;
}

.circle-line {
    width: 100%;
    height: 100%;
    position: relative;
}

.circle-line text {
    display: block;
    width: 50%;
    height: 5px;
    opacity: 0.7;
    position: absolute;
    top: 50%;
    left: 0px;
    transform-origin: center right;
    animation: circle 1.2s linear infinite;
}

.circle-line text::before {
    content: '';
    display: block;
    width: 12px;
    height: 4px;
    position: absolute;
    top: 0;
    right: 12px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 10px;
}

.circle-line text:nth-child(1) {
    transform: translateY(-50%) rotate(0deg);
    animation-delay: 0.1s;
}

.circle-line text:nth-child(2) {
    transform: translateY(-50%) rotate(30deg);
    animation-delay: 0.2s;
}

.circle-line text:nth-child(3) {
    transform: translateY(-50%) rotate(60deg);
    animation-delay: 0.3s;
}

.circle-line text:nth-child(4) {
    transform: translateY(-50%) rotate(90deg);
    animation-delay: 0.4s;
}

.circle-line text:nth-child(5) {
    transform: translateY(-50%) rotate(120deg);
    animation-delay: 0.5s;
}

.circle-line text:nth-child(6) {
    transform: translateY(-50%) rotate(150deg);
    animation-delay: 0.6s;
}

.circle-line text:nth-child(7) {
    transform: translateY(-50%) rotate(180deg);
    animation-delay: 0.7s;
}

.circle-line text:nth-child(8) {
    transform: translateY(-50%) rotate(210deg);
    animation-delay: 0.8s;
}

.circle-line text:nth-child(9) {
    transform: translateY(-50%) rotate(240deg);
    animation-delay: 0.9s;
}

.circle-line text:nth-child(10) {
    transform: translateY(-50%) rotate(270deg);
    animation-delay: 1.0s;
}

.circle-line text:nth-child(11) {
    transform: translateY(-50%) rotate(300deg);
    animation-delay: 1.1s;
}

.circle-line text:nth-child(12) {
    transform: translateY(-50%) rotate(330deg);
    animation-delay: 1.2s;
}

@keyframes circle {
    0% {
        opacity: 0.9;
    }

    100% {
        opacity: 0.05;
    }
}
