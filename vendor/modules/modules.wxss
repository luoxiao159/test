/* W2W Extension, Name: w2w-advanced-coupon, Code: indexCouponsStyle */

.coupon-wrapper {
    display: flex;
    padding: 0 10px;
}

.more-coupons {
    font-size: 12px;
    flex-shrink: 0;
    writing-mode: tb;
    padding: 0 5px;
    display: flex;
    justify-content: center;
    margin-left: 5px;
}

.coupon-list {
    display: flex;
    justify-content: space-between;
    flex-grow: 1;
}

.coupon-popup .zan-popup__container {
    width: auto;
    background-color: transparent;
}

.coupon-popup-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.coupon-popup-background {
    position: relative;
}

.coupon-popup-background-image {
    width: 250px;
}

.coupon-popup-detail {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 25px;
    left: 50%;
    transform: translateX(-50%);
}

.coupon-popup-title {
    font-size: 14px;
    text-align: center;
    color: #dd403a;
    line-height: 1.6;
}

.coupon-popup-content {
    font-size: 16px;
    text-align: center;
    color: #dd403a;
    line-height: 1.6;
}

.coupon-popup-logo {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    position: absolute;
    top: 145px;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0 2px 2px 2px #dd403a;
