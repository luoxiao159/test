/* 公告栏 */

.zan-noticebar {
    padding: 9px 10px;
    padding-left: 28px;
    line-height: 1.5;
    font-size: 12px;
    color: #f60;
    background-color: #fff7cc;
    position: relative;
}

.zan-noticebar .iconfont {
    position: absolute;
    font-size: 16px;
    width: 16px;
    height: 14px;
    line-height: 16px;
    top: 50%;
    transform: translateY(-50%);
}

.zan-noticebar .iconfont-notice {
    left: 8px;
}

.zan-noticebar .iconfont-arrow-right {
    right: 5px;
    margin-top: -0.5px;
}

/* 搜索栏 */

.search {
    padding: 7px 8px;
    background-color: #fff;
}

.search-input-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 8px 5px;
    border-radius: 32px;
    background-color: #efefef;
}

.search-input-wrapper:active {
    background-color: rgba(0, 0, 0, 0.05);
}

.search-label {
    font-size: 12px;
    line-height: 1;
    color: #707070;
    margin-left: 5px;
}

.search-input-wrapper image {
    width: 15px;
    height: 15px;
    margin-left: 5px;
}

.navbar-search-wrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1;
    transition: background-color 0.2s ease-in-out;
}

.search.navbar-search {
    display: flex;
    align-items: center;
    padding-top: 0;
    padding-bottom: 0;
    background-color: transparent;
}

.search.navbar-search .search-input-wrapper {
    height: 32px;
    flex-grow: 1;
    margin-right: 20px;
    background-color: #fff;
}

.search.navbar-search .logo {
    padding-right: 5px;
    margin-right: 2px;
    border-right: 1px solid #ddd;
}

.search.navbar-search .logo image {
    width: 20px;
    height: 20px;
}

/* 文章 */

.posts {
    display: flex;
    align-items: center;
    padding: 0 15px;
    background-color: #fff;
    position: relative;
}

.posts::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-top: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.posts-label {
    padding: 8px 0;
}

.posts-label image {
    position: relative;
    width: 50px;
    height: 12px;
    padding: 7px 12px 7px 0;
}

.posts-label image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border-right: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}

.post-title-wrapper {
    margin-left: 12px;
    position: relative;
    flex-grow: 1;
    height: 35px;
}

.post-title {
    opacity: 0;
    width: 100%;
    padding: 10px 0;
    font-size: 13px;
    position: absolute;
    top: 50%;
    left: 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 1;
    transform: translateY(-50%);
    transition: opacity 0.2s ease;
    z-index: 2;
}

.post-title.active {
    opacity: 1;
    z-index: 3;
}

