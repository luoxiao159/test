/* 热区 */

.imagemap-inner {
    position: relative;
}

.imagemap-area {
    position: absolute;
}

/* 地图 */

.map-wrap {
    position: relative;
}

.map-actions {
    position: absolute;
    bottom: 15px;
    right: 10px;
}

.map-action {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: #fff;
    margin: 9px 0;
    padding: 7px;
    box-sizing: border-box;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
}

.map-action image {
    width: 100%;
    height: 100%;
}

/* 悬浮菜单 */

.menu-list-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 13;
    background: rgba(0, 0, 0, 0.7);
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s cubic-bezier(1, 0, 1, 0);
}

.menu-list-mask.show {
    opacity: 1;
    visibility: visible;
    transition: all 0.5s cubic-bezier(0, 1, 1, 1);
}

.menu-list {
    position: fixed;
    bottom: 70px;
    right: 15px;
    z-index: 13;
}

.menu-list .menu-btn {
    margin-top: 5px;
    display: flex;
    width: 40px;
    height: 40px;
    padding: 7px;
    border-radius: 50%;
    background-color: #fff;
    overflow: visible;
}

.menu-list .main-btn {
    display: none;
}

.menu-list.style-upward .menu-btn, .menu-list.style-30deg .menu-btn,
.menu-list.style-45deg .menu-btn {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    transition: all 0.5s;
    transition-timing-function: cubic-bezier(0.68, -0.55, 0.27, 1.55);
}

.menu-list.style-upward.show .menu-btn, .menu-list.style-30deg.show .menu-btn,
.menu-list.style-45deg.show .menu-btn {
    opacity: 1;
}

.menu-list.style-upward .main-btn, .menu-list.style-30deg .main-btn,
.menu-list.style-45deg .main-btn {
    display: flex;
    opacity: 1;
    position: relative;
    z-index: 1;
}

.menu-list .menu-btn image {
    width: 100%;
    height: auto;
}

/* 带margin banner */

swiper swiper-item {
    box-sizing: border-box;
}

swiper swiper-item .banner-wrap {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

swiper swiper-item .link-wrap {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

/* 分类选择器 */

.category-filter {
    padding: 10px 2px;
    box-sizing: border-box;
    height: 54px;
    white-space: nowrap;
}

.category-filter .cat-item {
    position: relative;
    margin: 0 12px;
    font-size: 14px;
    display: inline-flex;
    height: 30px;
    align-items: center;
}

.category-filter .cat-item.selected {
    font-weight: bold;
}

.category-filter .cat-item.selected::after {
    content: "";
    display: block;
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: var(--mainColor);
    border-radius: 10px;
}

/* 视频模块 */

.module-video .module-inner {
    position: relative;
}

