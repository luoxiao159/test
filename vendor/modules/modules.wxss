.coupon-popup-close {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: #e84c44;
    box-sizing: border-box;
    padding: 5px;
    position: absolute;
    top: 0;
    right: 22px;
    transform: translateY(-50%);
}

.go-coupon-products {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    width: 190px;
    height: 45px;
    border-radius: 25px;
    color: #dd403a;
    background-color: #ecdb84;
    margin-top: 20px;
}

